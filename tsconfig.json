{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
     "moduleResolution": "node",

  },

  "include": [
    "src"
  ],

  "exclude": [
    "node_modules", "cyble", "**/*.dev.ts"
  ]

}